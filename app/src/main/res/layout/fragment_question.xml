<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Main Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/qNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#3F4A6B"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/qText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Question is blah blah???"
                android:textSize="20sp"
                android:textColor="#3F4A6B"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />


            <EditText
                android:id="@+id/in"
                android:layout_height="56dp"
                android:layout_width="match_parent"
                android:inputType="text"
                android:hint="Enter Answer"
                android:textColor="#3F4A6B"
                android:textColorHint="#9E9E9E"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <Spinner
                android:id="@+id/cityChoices"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp" />

            <!-- Checkbox Section -->
            <CheckBox android:id="@+id/Physical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physical"
                android:textColor="#3F4A6B"
                android:layout_marginBottom="4dp" />

            <CheckBox android:id="@+id/Emotional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emotional"
                android:textColor="#3F4A6B"
                android:layout_marginBottom="4dp"/>

            <CheckBox android:id="@+id/Financial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial"
                android:textColor="#3F4A6B"
                android:layout_marginBottom="4dp" />

            <CheckBox android:id="@+id/Other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="#3F4A6B"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/currentAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#3F4A6B"
                android:textStyle="italic"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/ButtonStorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/followUpQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#3F4A6B"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/followUpA"
                android:layout_height="56dp"
                android:layout_width="match_parent"
                android:inputType="text"
                android:textColor="#3F4A6B"
                android:textColorHint="#9E9E9E"
                android:padding="16dp" />

            <!-- Button Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <Button
                    android:id="@+id/BackB"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="Back"
                    android:textSize="16sp"
                    android:backgroundTint="#3F4A6B"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/SubmitB"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="Next"
                    android:textSize="16sp"
                    android:backgroundTint="#3F4A6B"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

